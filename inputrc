# My inputrc.  Symlink to ~/.inputrc enables this.
#
set editing-mode vi
# Remap ESC to use my 'jk' keypress to toggle insert or command mode
$if mode=vi
    set keymap vi-command

    set keymap vi-insert
    "jk": vi-movement-mode

    # Because we've stolen j, we have to use something else for
    # going backwards in history:
    \C-j: previous-history
    # And then for consistency, Ctrl+k will go forward in history:
    \C-k: next-history
	"\e.": yank-last-arg
	"\e_": yank-last-arg
$endif

