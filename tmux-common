# tmux-common
# common helpers for tmux scripts
# :vim set filetype=sh:

function isTmuxRunning {
    /opt/bb/bin/tmux ls &>/dev/null
}

# Capture the current DISPLAY value. If a tmux shell gets
# disconnected, you can reconnect by running ~/tmp/set_DISPLAY
function makeSet_DISPLAY {
    local newScript=$HOME/tmp/set_DISPLAY
    mkdir -p $(dirname $newScript) 2>/dev/null
    echo "#!/bin/bash" >> $newScript
    echo "# Generated by ~/bin/tmux-common" >> $newScript
    echo "export DISPLAY" >> $newScript
    echo "DISPLAY=$DISPLAY" >> $newScript
    chmod +x $newScript
}


