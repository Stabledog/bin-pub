# : vim: set filetype=sh :

# gitkit-taskrc
#
# Various aids for git

function gitkit-help {
    echo gc='git commit'
	echo gs='git status'
	echo gsu='git status -uno'
	echo gb='git branch'
	echo ga='git add'
	echo gp='git push'
	echo gl='git log'
	echo gpull='git pull'
	echo gd='git diff'
	echo gdt='git mergetool'
	echo gmt='git difftool'
	echo glu='git-list-untracked-files'
	echo gfr='git-find-root'
}


function initGitAliases {
    alias gc='git commit'
	alias gs='git status'
	alias gsu='git status -uno'
	alias gb='git branch'
	alias ga='git add'
	alias gp='git push'
	alias gl='git log'
	alias gpull='git pull'
	alias gd='git diff'
	alias gmt='git mergetool'
	alias gdt='git difftool'
	alias glu='git-list-untracked-files'
	alias gfr='git-find-root'
}

function stub {
    echo "stub: $*" >&2
}

function vimgit {
    # If there's a .vimgit file in this dir, we source it to generate the 
    # list of files-to-load:
    #stub "pwd=$PWD"
    if [[ -f ./.vimgit ]]; then
        #stub xyz
        # Record the existence of this .vimgit file for administration:
        mkdir -p $HOME/.taskrc/vimgit-files &>/dev/null
        local lo=$PWD/.vimgit
        local lx=$(echo ${PWD:1} | tr '/' '.')
        ( cd $HOME/.taskrc/vimgit-files && ln -sf $lo "./$lx.vimgit" )

        $EDITOR $(source ./.vimgit $* ) 
    else
        # Fall-through behavior is provided by canonical:
        $EDITOR $(source $HOME/.taskrc/vimgit-files/vimgit-canonical $* )
    fi
}

function vimgit_init {
    # Create a .vimgit file in this dir from the canonical template:
    if [[ -f .vimgit ]]; then
        echo "ERROR: there's already a .vimgit file in $PWD" >&2
        false
        return
    fi
    cp ~/.taskrc/vimgit-files/vimgit-canonical ./.vimgit || { echo "ERROR copying vimgit-canonical to .vimgit"; false; return; }

    echo "Local .vimgit has been initialized  from ~/.taskrc/vimgit-files/vimgit-canonical"
}

# vimgit loads all the files returned by 'git ls-files':
#alias vimgit='vimgit_main '


if type -P git &>/dev/null; then
    # Run this only if git is installed:
    initGitAliases
fi



