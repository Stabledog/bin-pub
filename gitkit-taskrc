# : vim: set filetype=sh :

# gitkit-taskrc
#
# Various aids for git

function gitkit-help {
    echo gc='git commit'
	echo gs='git status'
	echo gb='git branch'
	echo ga='git add'
	echo gp='git push'
	echo gl='git log'
	echo gpull='git pull'
	echo gd='git diff'
	echo gdt='git mergetool'
	echo gmt='git difftool'
	echo glu='git-list-untracked-files'
	echo gfr='git-find-root'
}


function initGitAliases {
    alias gc='git commit'
	alias gs='git status'
	alias gb='git branch'
	alias ga='git add'
	alias gp='git push'
	alias gl='git log'
	alias gpull='git pull'
	alias gd='git diff'
	alias gmt='git mergetool'
	alias gdt='git difftool'
	alias glu='git-list-untracked-files'
	alias gfr='git-find-root'
}



if type -P git &>/dev/null; then
    # Run this only if git is installed:
    initGitAliases
fi



