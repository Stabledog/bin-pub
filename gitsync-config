# ~/.gitsync-config
# vim: filetype=sh :
# We're sourced by gitsync, and our job is to print
# a table of [dirname] [options]

function print_config {
    echo "
    ~/.vim unsafe
    ~/bin unsafe
    ~/bin/tox-py unsafe
    ~/journal
    "

    [[ -f ~/.taskrc/gitsync-local ]] && source ~/.taskrc/gitsync-local

}

# Remove blanks:
print_config | sed 's/^ *//' | egrep -v '^$'

